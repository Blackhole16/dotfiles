bindsym --release Print exec --no-startup-id import "/tmp/screenshot`date +'%Y%m%d%H%M%S'`.png"

bindsym XF86AudioRaiseVolume exec --no-startup-id /usr/bin/pulseaudio-ctl up 3
bindsym XF86AudioLowerVolume exec --no-startup-id /usr/bin/pulseaudio-ctl down 3
bindsym XF86AudioMute exec --no-startup-id /usr/bin/pulseaudio-ctl mute
bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioStop exec --no-startup-id mpc stop
bindsym XF86AudioPrev exec --no-startup-id mpc prev
bindsym XF86AudioNext exec --no-startup-id mpc next
bindsym XF86MonBrightnessDown exec --no-startup-id /usr/bin/xbacklight -dec 10
bindsym XF86MonBrightnessUp exec --no-startup-id /usr/bin/xbacklight -inc 10

bindsym XF86Sleep exec --no-startup-id i3lock

